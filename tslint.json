{
  "rules": {
    "align": [
      true,
      "elements",
      "members",
      "parameters",
      "statements"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],

    "arrow-return-shorthand": true,
    "ban-comma-operator": true,
    "binary-expression-operand-order": false,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": true,
    "encoding": true,
    "eofline": true,
    "file-name-casing": [
      true,
      "camel-case",
      "pascal-case"
    ],
    "forin": true,
    "import-spacing": true,
    "indent": [
      true,
      "spaces"
    ],
    "label-position": true,
    "linebreak-style": [
      true,
      "LF"
    ],
//    "max-line-length": [true, 140],
    "member-access": true,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [
      true,
      3
    ],
    "no-console": [
      true,
      "log",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": false,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "no-import-side-effect": false, // Used for "reflect-metadata" and styles
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-invalid-template-strings": true,
    "no-invalid-this": false, // XMLHttpRequest in dao, JSON replacer in serializer, mocha api `this.slow(100)`
    "no-irregular-whitespace": true,
    "no-magic-numbers": false,
    "no-parameter-reassignment": true,
    "no-reference": true,
    "no-require-imports": false, // Require inside try-catch for server; expect.js
    "no-return-await": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-submodule-imports": false, // e.g. "@state-saga/core/effects"
    "no-switch-case-fall-through": false,
    "no-trailing-whitespace": [
      true,
      "ignore-comments"
    ],
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-class": true,
    "no-unnecessary-initializer": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-use-before-declare": false, // Typeorm annotations do that
    "no-var-keyword": true,
    "no-void-expression": false,
    "number-literal-format": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-open-brace",
      "check-whitespace"
    ],
    "one-variable-per-declaration": true,
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-switch": true,
    "prefer-template": true,
    "prefer-while": true,
    "quotemark": [
      true,
      "double",
      "avoid-escape"
    ],
    "radix": true,
    "restrict-plus-operands": true,
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    ],
    "switch-default": true,
    "trailing-comma": [
      true,
      {
        "esSpecCompliant": true,
        "multiline": {
          "arrays": "always",
          "exports": "never",
          "functions": "never",
          "imports": "never",
          "objects": "always",
          "typeLiterals": "always"
        },
        "singleline": "never"
      }
    ],
    "triple-equals": [
      true
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "use-isnan": true,
    "variable-name": [
      true,
      "check-format",
      "require-const-for-all-caps",
      "allow-leading-underscore",
      "allow-pascal-case",
      "allow-snake-case",
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      // "check-postbrace",  -- disabled because complains about `{}`
      "check-type"
    ]
  }
}
